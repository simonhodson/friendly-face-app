{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-native"
  ],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "extends" : [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "rules" : {
    "linebreak-style": 0,
    "arrow-body-style" : "warn",
    "class-methods-use-this": 0,
    "no-console": "off",
    "no-use-before-define": "off",
    "import/prefer-default-export": "off",
    "react/display-name": "off"
  }
}